extends layout

block content
  h1 #{title}: #{anime.name}

  if allItems.length

    p #[strong Delete the following items before attempting to delete this anime.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Associated Items

      dl
      each item in allItems
        dt
          a(href=item.url) #{item.name}

  else
    p Do you really want to delete this anime?

    form(method='POST' action='')
      div.form-group
        input#animeid.form-control(type='hidden',name='animeid', required='true', value=anime._id )

      button.btn.btn-primary(type='submit') Delete